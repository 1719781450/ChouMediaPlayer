<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_video_cover_sup"
        android:layout_width="180dp"
        android:layout_height="120dp"
        app:placeholderImage="@color/gainsboro"
        app:failureImage="@color/gainsboro"
        app:fadeDuration="300"
        app:actualImageScaleType="focusCrop"/>

    <TextView
        android:id="@+id/tv_title_sup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_video_cover_sup"
        android:layout_marginLeft="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:text="标题标题"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_sup"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/iv_video_cover_sup"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_head_sup"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            app:placeholderImage="@mipmap/ic_head_default"
            app:failureImage="@mipmap/ic_head_default"
            app:fadeDuration="300"
            app:actualImageScaleType="focusCrop"
            app:roundAsCircle="true"/>


        <TextView
            android:id="@+id/tv_name_sup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_head_sup"
            android:maxLines="1"
            android:enabled="true"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:text="viho"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/iv_video_cover_sup"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_look_sup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_look"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tv_look_sup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/grey"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="3421"/>

        <ImageView
            android:id="@+id/iv_like_sup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_like"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tv_like_sup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/grey"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="2223"/>

        <ImageView
            android:id="@+id/iv_collect_sup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_collect"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tv_collect_sup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/grey"
            android:layout_centerVertical="true"
            android:text="1212"/>
    </LinearLayout>

</RelativeLayout>